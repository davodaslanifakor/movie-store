.slider
    position relative
    overflow hidden
    margin 0 auto
    width 100%
    height 768px
    white-space nowrap
    background-image: url('/static/images/holder.jpg')
    background-position 50%
    background-size cover
.slider-wrapper
    position relative
    width 100%
    height 100%
.slide
    position relative
    display inline-block
    width 100%
   
    .image
        position absolute
        padding-bottom 50.550%
        top -20px
        right 0
        width 100%
        border-radius inherit
        background-position 50%
        background-size cover
.arrow
    display flex
    justify-content center
    align-items center
    width 50px
    height 50px
    border-radius 50%
    background #f9f9f9
    cursor pointer
    transition transform ease-in 0.1s
    i
        color $gray
.nextArrow
    position absolute
    top 50%
    right 25px
    z-index 999
    color #fff
.backArrow
    position absolute
    top 50%
    left 25px
    z-index 999
    color #fff
.fa-arrow-right:before, .fa-arrow-left:before
    color #222
