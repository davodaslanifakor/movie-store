.navbar
    display flex
    justify-content space-between
    align-items center
    width 100%
    height 75px
    background-color $white
    padding 0 15px
.avatar
    display flex
    width 176px
    justify-content space-between
    align-items: center
    flex-direction: row-reverse
    &-box
        position relative
        overflow hidden
        width 30px
        height 30px
        border-radius 100%
    &-image
        position absolute
        top 0
        right 0
        bottom 0
        left 0
    &-name 
        font-family: $fomt
        font-weight: bold
        
.navbarItem
    display flex
    justify-content: space-between
    width 350px
    li 
     a
        color $gray
        transition: color 0.3s ease-in
        &:before 
            font-size: 28px
        &:hover
            color $red
